<html>
    <head>        
        <meta charset="utf-8">
        <meta name="viewport" content="width=device-width, initial-scale=1">
        <title>Socket.io Example</title>        
        <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha1/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-GLhlTQ8iRABdZLl6O3oVMWSktQOp6b7In1Zl3/Jr59b6EGGoI1aFkw7cmDA6j6gD" crossorigin="anonymous">
        <script src="https://cdn.socket.io/socket.io-3.0.1.min.js"></script>
    </head>
    <body>
        <div class="container mt-5 text-center">
        
        <div class="text-center">
            <h1 class="display-5 fw-bold mb-5">Socket.io Example</h1>
            <input type="text" class="message form-control w-25 d-inline-block" placeholder="Enter Message" />
            <button onclick="sendMessage()" class="btn btn-primary">Send Message</button>
        </div>
        <div class="text-left mt-5">
            <strong>Received message:</strong>
            <p class="listener-part"></p>
        </div>
        </div>
        <script>
            const socket = io('http://localhost:3000');            
            socket.on('connection');
            
            socket.on('message', (data) => {
                // document.querySelector('.listener-part').innerHTML = data;
                const node = document.createElement("p");
                const textnode = document.createTextNode(data);
                node.appendChild(textnode);
                document.querySelector('.listener-part').appendChild(node);
            })

            const sendMessage = () => {
                const input = document.querySelector('.message').value;
                socket.emit('message', input);
                document.querySelector('.message').value = '';
            }
        </script>
    </body>
</html>